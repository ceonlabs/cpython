#! /bin/sh 
set -eux

COSMO_LIBDIR=$(realpath "../../cosmopolitan/o")
COSMO_REPODIR=$(realpath "../../cosmopolitan")
EXTRA_STUBS=$(realpath "./header_stubs")
CC="./gcc-wrapper.bash"

CC=/opt/cosmo/tool/scripts/cosmocc

CXX=/opt/cosmo/tool/scripts/cosmoc++
LD=/opt/cosmo/tool/scripts/cosmoc++

if [ ! -f $COSMO_LIBDIR/cosmopolitan.a ]; then
    echo "<<<SUPERCONFIGURE>>> cosmopolitan.a does not exist in $COSMO_LIBDIR!!!!"
    exit 1
fi

if [ ! -f $COSMO_REPODIR/libc/integral/normalize.inc ]; then
    echo "<<<SUPERCONFIGURE>>> $COSMO_REPODIR is not root of cosmopolitan repo!!!!"
    exit 1
fi

echo "<<<SUPERCONFIGURE>>> Running configure with $CC"
LD_LIBRARY_PATH="" ./configure  \
    --prefix="" \
    --disable-shared --disable-profiling \
    --disable-ipv6 --disable-optimizations \
    --disable-pystats --enable-loadable-sqlite-extensions=no \
    --disable-test-modules  \
    --with-pkg-config=no  \
    --with-static-libpython \
    --without-lto --without-pydebug \
    --with-pymalloc --with-freelists \
    --without-readline  \
    --without-ensurepip \
    --with-builtin-hashlib-hashes=  \
    --with-libm="" \
    --with-libc="" \
    OPT="" \
    PLATFORM_TRIPLET="x86_64-linux-musl" \
    CC="/opt/cosmo/tool/scripts/cosmocc" \
    CXX="/opt/cosmo/tool/scripts/cosmoc++" \
    LD="/opt/cosmo/tool/scripts/cosmoc++" \
    CCSHARED="" \
    LINKFORSHARED="" \
    PKG_CONFIG="" \
    CFLAGS="-O2 -g3  -Wno-unused-value \
      -static -fno-pie -fno-omit-frame-pointer \
      -mno-red-zone -pg \
      -nostdinc -nostdlib" \
    LDFLAGS="-static -nostdlib -nostdinc \
      -fno-omit-frame-pointer \
      -mno-red-zone -pg \
      -fno-pie -mno-red-zone" \
    LIBS="" \
    LIBSQLITE3_CFLAGS="-I$COSMO_REPODIR/third_party/sqlite3"\
    LIBSQLITE3_LIBS="-L$COSMO_LIBDIR/third_party/sqlite3 -lsqlite3" \
    CFLAGS_NODIST="-O2 -g3  \
      -static -fno-pie -fno-omit-frame-pointer \
      -mno-red-zone -pg \
      -nostdinc -nostdlib"

echo "<<<SUPERCONFIGURE>>> Running make"
# make -j4
